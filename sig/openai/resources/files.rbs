module OpenAI
  module Resources
    class Files
      def create: (
        file: Pathname | StringIO | IO | OpenAI::FilePart,
        purpose: OpenAI::Models::file_purpose,
        ?request_options: OpenAI::request_opts
      ) -> OpenAI::FileObject

      def retrieve: (
        String file_id,
        ?request_options: OpenAI::request_opts
      ) -> OpenAI::FileObject

      def list: (
        ?after: String,
        ?limit: Integer,
        ?order: OpenAI::Models::FileListParams::order,
        ?purpose: String,
        ?request_options: OpenAI::request_opts
      ) -> OpenAI::Internal::CursorPage[OpenAI::FileObject]

      def delete: (
        String file_id,
        ?request_options: OpenAI::request_opts
      ) -> OpenAI::FileDeleted

      def content: (
        String file_id,
        ?request_options: OpenAI::request_opts
      ) -> StringIO

      def initialize: (client: OpenAI::Client) -> void
    end
  end
end
